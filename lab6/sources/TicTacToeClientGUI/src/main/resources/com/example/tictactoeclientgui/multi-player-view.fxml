<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tictactoeclientgui.MultiPlayerController">
   <VBox prefWidth="300.0">
      <children>
          <HBox alignment="TOP_CENTER">
              <Label text="КРЕСТИКИ-НОЛИКИ" textFill="#ffa400">
                  <font>
                      <Font name="System Bold" size="18.0" />
                  </font>
            </Label>
          </HBox>
          <HBox alignment="TOP_CENTER">
              <Button fx:id="button_0" disable="true" mnemonicParsing="false" onAction="#onButton0Click" prefHeight="64.0" prefWidth="64.0" text="." />
              <Button fx:id="button_1" disable="true" mnemonicParsing="false" onAction="#onButton1Click" prefHeight="64.0" prefWidth="64.0" text="." />
              <Button fx:id="button_2" disable="true" mnemonicParsing="false" onAction="#onButton2Click" prefHeight="64.0" prefWidth="64.0" text="." />
          </HBox>
          <HBox alignment="TOP_CENTER">
              <Button fx:id="button_3" disable="true" mnemonicParsing="false" onAction="#onButton3Click" prefHeight="64.0" prefWidth="64.0" text="." />
              <Button fx:id="button_4" disable="true" mnemonicParsing="false" onAction="#onButton4Click" prefHeight="64.0" prefWidth="64.0" text="." />
              <Button fx:id="button_5" disable="true" mnemonicParsing="false" onAction="#onButton5Click" prefHeight="64.0" prefWidth="64.0" text="." />
          </HBox>
          <HBox alignment="TOP_CENTER">
              <Button fx:id="button_6" disable="true" mnemonicParsing="false" onAction="#onButton6Click" prefHeight="64.0" prefWidth="64.0" text="." />
              <Button fx:id="button_7" disable="true" mnemonicParsing="false" onAction="#onButton7Click" prefHeight="64.0" prefWidth="64.0" text="." />
              <Button fx:id="button_8" disable="true" mnemonicParsing="false" onAction="#onButton8Click" prefHeight="64.0" prefWidth="64.0" text="." />
          </HBox>
          <HBox alignment="TOP_CENTER">
              <children>
                  <Label fx:id="gameStatus" textFill="RED">
                      <font>
                          <Font size="36.0" />
                      </font>
                  </Label>
              </children>
            <padding>
               <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
          </HBox>
      </children>
      <padding>
         <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
      </padding>
   </VBox>
   <VBox prefWidth="300.0">
      <children>
         <Label alignment="CENTER" prefWidth="300.0" text="НАСТРОЙКИ" textFill="#2600ff">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <Label text="имя игрока">
            <graphic>
               <TextField fx:id="PlayerName" text="Player" />
            </graphic>
         </Label>
         <Label text="IP-адрес">
            <graphic>
               <TextField fx:id="ServerIP" text="127.0.0.1" />
            </graphic>
         </Label>
         <Label text="порт">
            <graphic>
               <TextField fx:id="ServerPort" text="1234" />
            </graphic>
         </Label>
         <Button fx:id="connect_button" mnemonicParsing="false" onAction="#onConnectClick" prefWidth="300.0" text="Присоединиться" />
      </children>
      <padding>
         <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
      </padding>
   </VBox>
